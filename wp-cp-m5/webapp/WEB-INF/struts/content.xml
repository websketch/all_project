<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>
	
  <form-beans>
	  <form-bean name="pageForm" type="sample.PageForm"/>
    
  </form-beans>
	
  <!-- ========== Global Forward Definitions ============================== -->
  <global-forwards>
		<forward   name="logon"  path="/login.jsp"/>
  </global-forwards>
  
  <!-- ========== Action Mapping Definitions ============================== -->
  <action-mappings>
	  
		<action path="/Category"       forward="/category/category.jsp" />
				
  </action-mappings>
	
  <!--message-resources parameter="lang.MessageResources"  key="org.apache.struts.action.MESSAGE"/-->  
  <message-resources parameter="content.MessageResources"  key="org.apache.struts.action.MESSAGE"/>
  <message-resources parameter="sports.Sports" key="sports"/> 
	
</struts-config>