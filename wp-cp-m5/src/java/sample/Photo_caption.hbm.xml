<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
<class name="sample.Photo_caption" table="photo_caption">
<composite-id>
<key-property name="lang_id" column="lang_id" type="integer" length="11"/>
<key-property name="photo_id" column="photo_id" type="integer" length="11"/>
</composite-id>
<property name="url" column="url" type="string" length="255"/>
<property name="title" column="title" type="string" length="255"/>
<property name="description" column="description" type="string" length="255"/>
<property name="create_time" column="create_time" type="timestamp" length="19"/>
<property name="creater" column="creater" type="string" length="255"/>
<property name="update_time" column="update_time" type="timestamp" length="19"/>
<property name="updater" column="updater" type="string" length="255"/>
</class>
</hibernate-mapping>
